algoritmo "antecessoresucessor"

var

 num: real
 antecessor: real
 sucessor: real

inicio

      escreva("Digite um número: ")
      leia (num)
      antecessor <- (num-1)
      sucessor <- (num+1)
      escreval ("O sucessor de ", num, " é ", sucessor)
      escreval ("O antecessor de ", num, " é ", antecessor)
      
fimalgoritmo